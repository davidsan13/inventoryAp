extends layout

block content
  h1 #{title}

  form(method='POST' action='', enctype='multipart/form-data')
    div.form-group
      label(for='name') Product Name:
      input#name.form-control(
        type ='text',
        placeholder =''
        name ='name'
        value = (undefined === item ? '' : item.name)
      )
      label(for='description') Description:
      input#description.form-control(
        type ='text',
        
        name ='description'
        value = (undefined === item ? '' : item.description)
      )
      label(for='category') Category:
      input#category.form-control(
        type ='text',
        placeholder ='Toys, Electronics etc.'
        name ='category'
        value = (undefined === item ? '' : item.category)
      )
      label(for='price') Price:
      input#price.form-control(
        type ='text',
        placeholder =''
        name ='price'
        value = (undefined === item ? '' : item.price)
      )
      label(for='stock') Inventory:
      input#stock.form-control(
        type ='text',
        placeholder =''
        name ='stock'
        value = (undefined === item ? '' : item.stock)
      )
      input(
      type='file',
      name='image'
    )
      button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul
      for error in errors 
        li != error.msg
